{
  "cli": {
    "version": ">= 10.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": { "simulator": true },
      "channel": "development",
      "env": {
        "APP_ENV": "development",
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
      },
      "hooks": {
        "postInstall": [
          {
            "command": "bash -lc 'if [ -f android/gradle.properties ]; then sed -i.bak "'"'s/^newArchEnabled=.*/newArchEnabled=false/'"'" android/gradle.properties; fi'",
            "name": "Disable RN New Architecture on Android"
          }
        ]
      }
    },
    "preview": {
      "developmentClient": false,
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": { "simulator": false },
      "channel": "preview",
      "env": {
        "APP_ENV": "development"
      }
    },
    "production": {
      "developmentClient": false,
      "distribution": "store",
      "android": { "buildType": "app-bundle" },
      "ios": { "simulator": false },
      "channel": "production",
      "env": {
        "APP_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
